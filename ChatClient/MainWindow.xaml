<Window x:Name="load" x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="load_Loaded" Closing="load_Closing">
    <Grid>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="44" Margin="284,10,0,0" TextWrapping="Wrap" Text="UserName" VerticalAlignment="Top" Width="498"/>
        <Button x:Name="ConDiscon" Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="230" Height="44"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Left" Height="260" Margin="10,59,0,0" VerticalAlignment="Top" Width="772"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="85" Margin="10,324,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="668" KeyDown="tbMessage_KeyDown"/>
        <Button x:Name="btnSend" Click="btnSend_Click" Content="Send" HorizontalAlignment="Left" Margin="683,346,0,0" VerticalAlignment="Top" Width="99" Height="37"/>

    </Grid>
</Window>
